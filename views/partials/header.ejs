<!DOCTYPE html>
<html lang="en">
<head>
</head>
<body>
    <div class="container fixed-top" id="header">
        <div style="height:42px"></div>
        <div class="row">
            <a class="col-4 pl-0 pr-0" id="logo-col" href="homepage">
                <img src="../../media/Logo%20Circle.png" class="logo" id="over">
                <img src="../../media/Logo.png" class="logo" id="under">
            </a>
            <a class="col-8 pl-0 pr-0" id="title-col" href="homepage">
                <h1 id="web-title">Mnemosis</h1>
                <h4 id="web-subtitle">One Game at a Time</h4>
            </a>
            <div class="col-12 pl-0 pr-0" id="nav-col">
                <div class="navbar navbar-custom" id="navbar-main">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <form class="form-inline">

                                <input class="form-control subheading mr-3 mt-0" id="search-bar" type="text" placeholder="Search for a game or category here" style="width: 400px">
                                <button class="btn btn-custom mr-3" type="submit">Search</button>
                                <div style="border-left: 2.5px solid; border-left-color: #3CACAE; height: 50px"></div>
                                <a href="view_games" class="btn btn-custom ml-3">View all games</a>

                            </form>
                        </li>
                    </ul>
                    <div class="dropdown">
                        <a href="#" data-toggle="dropdown">
                            <img src="../../media/Icon.png" id="user-icon">
                        </a>
                        <div class="dropdown-menu dropdown-menu-right">
                            <h1 class="dropdown-header subheading">For logged-in users</h1> <!-- to be removed -->
                            <a href="view_profile_self" class="dropdown-item subheading">View Profile</a>
                            <a href="create_game" class="dropdown-item subheading">Create a Game</a>
                            <a href="login_and_register" class="dropdown-item subheading">Log-out</a>
                            <h1 class="dropdown-header subheading">For guests</h1> <!-- to be removed -->
                            <a href="login_and_register" class="dropdown-item subheading">Log-in</a>
                            <a href="login_and_register" class="dropdown-item subheading">Register</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div style="height:450px"></div>

    <script>
        window.onscroll = function () {
            if (document.body.scrollTop > 100 || document.documentElement.scrollTop > 100) {
                $(".logo").css("max-height", "150px");
                $("#web-title").css("font-size", "50px");
                $("#web-subtitle").css("font-size", "20px");

                $("#nav-col").css("top", "20px");
                $("#title-col").css("padding-top", "20px");
                $("#title-col").css("padding-bottom", "20px");

                $("#logo-col").removeClass("col-4");
                $("#logo-col").addClass("col-2");

                $("#title-col").removeClass("col-8");
                $("#title-col").addClass("col-3");

                // $("#nav-col").removeClass("col-12");
                // $("#nav-col").addClass("col-6");
            } else {
                $(".logo").css("max-height", "300px");
                $("#web-title").css("font-size", "100px");
                $("#web-subtitle").css("font-size", "40px");

                $("#nav-col").css("top", "100px");
                $("#title-col").css("padding-top", "50px");
                $("#title-col").css("padding-bottom", "0");

                $("#logo-col").removeClass("col-2");
                $("#logo-col").addClass("col-4");

                $("#title-col").removeClass("col-3");
                $("#title-col").addClass("col-8");

                // $("#nav-col").removeClass("col-6");
                // $("#nav-col").addClass("col-12");
            }
        };
    </script>
</body>
</html>